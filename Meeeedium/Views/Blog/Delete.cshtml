@model Meeeedium.Models.Blog

@{
    ViewBag.Title = "Delete";
}


    <div class="container">
        <h2>Delete</h2>
        <h3>Are you sure you want to delete this?</h3>
        <h4>Blog Details</h4>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-preview">
                        <h4> @Html.DisplayFor(model => model.Title)</h4>
                        <p class="post-heading">@Html.DisplayFor(model => model.Body)</p>
                        <p class="post-meta"> Posted by @Html.DisplayFor(model => model.Owner.UserName) on @Html.DisplayFor(model => model.Created) </p>
                        <p class="post-subtitle">

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                    @Html.ActionLink("Back to List", "Index", "Blog", new { @class = "btn btn-primary" })
                                </div>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </div>
