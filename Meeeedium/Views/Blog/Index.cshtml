@model IEnumerable<Meeeedium.Models.Blog>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2>My Blogs</h2>
    <div id="LeftColumn" style="float: Left;">
        @using (Html.BeginForm())
        {   <p>
        @Html.TextBox("Search", null, new { @class = "form-control" })
    </p>
    <p>
        <input type="submit" value="Search" class="btn btn-primary" />
        @Html.ActionLink("Clear Search", "Index", "Blog", new { @class = "btn btn-primary" })
    </p>
        }

        @Html.ActionLink("Create New Blog", "Create", "Blog", new { @class = "btn btn-primary" })

        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TeaserText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Owner.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Created)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @Html.DisplayFor(model => item.Title)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.TeaserText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Owner.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                        <br />
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "text-primary" })
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "text-primary" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "text-primary" })
                    </td>

                </tr>
            }
        </table>
    </div>
</div>
